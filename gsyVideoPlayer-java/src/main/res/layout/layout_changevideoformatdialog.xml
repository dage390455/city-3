<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="190dp"

    android:layout_height="match_parent"
    android:background="#f2252525"

    android:orientation="vertical"

    android:textColor="@color/f2252525">


    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="match_parent"

        android:gravity="center_horizontal"

        android:orientation="vertical">

        <TextView
            android:id="@+id/flvformat_tv"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:gravity="center"
            android:text="@string/flv_format"
            android:textColor="@color/white"

            android:textSize="16dp" />

        <TextView
            android:id="@+id/hlsformat_tv"
            android:layout_width="190dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/hls_format"


            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/videoformat_des_tv"
        android:layout_width="190dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"

        android:lineSpacingExtra="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/video_format_des"


        android:textColor="@color/c_b6b6b6"
        android:textSize="11dp" />
</RelativeLayout>