<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root_item_adapter_person_avatar_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:gravity="center"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/iv_avatar_item_adapter_person_avatar_history"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_time_item_adapter_person_avatar_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textColor="@color/c_252525"
            android:textSize="16dp"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrows_right"
            android:contentDescription="@null"/>
    </LinearLayout>
    <View
        android:id="@+id/view_divider_item_adapter_person_avatar_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_divider_height"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/c_dfdfdf"/>

</LinearLayout>