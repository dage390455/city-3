<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x310"
        android:gravity="center_horizontal">

        <View
            android:layout_width="@dimen/x3"
            android:layout_height="match_parent"
            android:background="@color/c_979797"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x380"
        android:orientation="vertical">

        <com.sensoro.smartcity.widget.AutoSplitTextView
            android:id="@+id/tv_alarm_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x20"
            android:inputType="textMultiLine"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_size"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x380"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:text="@string/alarm_log_alarm_result"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size"/>

            <TextView
                android:id="@+id/item_alarm_detail_child_alarm_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:text="@string/alarm_log_alarm_cause"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size"/>

            <TextView
                android:id="@+id/item_alarm_detail_child_alarm_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:text="@string/alarm_log_alarm_place"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size"/>

            <TextView
                android:id="@+id/item_alarm_detail_child_alarm_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:text="@string/alarm_log_alarm_remark"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size"/>

            <TextView
                android:id="@+id/item_alarm_detail_child_alarm_remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x20">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_alarm_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"/>
        </RelativeLayout>


    </LinearLayout>

</FrameLayout>
