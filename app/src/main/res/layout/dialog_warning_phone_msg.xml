<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_solid_ff_corner"

        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title_warning_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="@string/alarm_contact_tip_phone"
            android:textColor="@color/c_252525"
            android:textSize="18dp" />


        <com.sensoro.common.widgets.MaxHeightRecyclerView
            android:id="@+id/rv_content_item_dialog_warning_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.sensoro.common.widgets.MaxHeightRecyclerView>
    </LinearLayout>

    <ImageView

        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@mipmap/qrcode_close" />

</LinearLayout>