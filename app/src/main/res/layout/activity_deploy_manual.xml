<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sensor_deploy_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        >
        <ImageView
            android:id="@+id/deploy_manual_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x50"
            android:padding="12dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@mipmap/ic_close" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y150"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/x60"
            android:textColor="@color/c_1b1b1b"
            android:text="@string/tips_input_machine_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="@dimen/y200"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/deploy_manual_et"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x75"
                android:layout_marginRight="@dimen/x75"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y200" />
            <ImageView
                android:id="@+id/deploy_clear_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/deploy_manual_et"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@mipmap/ic_et_delete"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:background="@color/c_e7e7e7"
            android:layout_marginLeft="@dimen/x75"
            android:layout_marginRight="@dimen/x75"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"/>

        <Button
            android:id="@+id/deploy_manual_btn"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginLeft="@dimen/x75"
            android:layout_marginRight="@dimen/x75"
            android:layout_marginBottom="@dimen/y150"
            android:layout_width="match_parent"
            android:text="@string/next"
            android:textSize="@dimen/city_btn_text_size"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/shape_button_normal"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
