<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f4f4f4"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/contract_index_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:background="@color/white">

        <ImageView
            android:id="@+id/contract_index_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="15dp"
            android:src="@drawable/arrows_left" />

        <TextView
            android:id="@+id/contract_index_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contract_index_title"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/contract_index_back"
            android:textColor="@color/c_252525"
            android:textSize="@dimen/city_large_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y60"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/contract_index_name_license_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_index_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/contract_index_person" />

            <TextView
                android:id="@+id/contract_index_license_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_index_license"
                android:text="@string/contract_index_business_license_identification"
                android:textColor="@color/c_252525"
                android:textSize="@dimen/city_tiny_large_size" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:padding="15dp"
                android:src="@drawable/arrows_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/c_dfdfdf" />

        <RelativeLayout
            android:id="@+id/contract_index_person_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_index_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/contract_index_license" />

            <TextView
                android:id="@+id/contract_index_person_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_index_person"
                android:text="@string/contract_index_id_card_identification"
                android:textColor="@color/c_252525"
                android:textSize="@dimen/city_tiny_large_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:padding="15dp"
                android:src="@drawable/arrows_right" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/c_dfdfdf" />

        <RelativeLayout
            android:id="@+id/contract_index_manual_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_index_manually"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/contract_index_manualpng" />

            <TextView
                android:id="@+id/contract_index_manual_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_index_manually"
                android:text="@string/contract_index_"
                android:textColor="@color/c_252525"
                android:textSize="@dimen/city_tiny_large_size" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:padding="15dp"
                android:src="@drawable/arrows_right" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
