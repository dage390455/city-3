<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_solid_ff_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_warning_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/alert_contact"
        android:textColor="@color/c_252525"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/iv_close_warning_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null"
        android:padding="16dp"
        android:src="@mipmap/deploy_install_test_close" />

    <TextView
        android:id="@+id/tv_count_warning_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_warning_contact"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/c_a6a6a6"
        android:text="@string/warning_contact"
        android:textSize="14dp" />

    <com.sensoro.common.widgets.MaxHeightRecyclerView
        android:id="@+id/rv_content_item_dialog_warning_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_count_warning_contact"
        android:layout_marginBottom="16dp">

    </com.sensoro.common.widgets.MaxHeightRecyclerView>


</RelativeLayout>