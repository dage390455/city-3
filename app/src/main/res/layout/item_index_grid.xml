<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_index_item">

    <com.sensoro.smartcity.widget.SensoroAlarmView
        android:id="@+id/item_grid_sensor_call"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
        android:layout_marginLeft="-8.5dp"
        android:layout_marginTop="-3.5dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/item_grid_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/item_grid_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30">

            <ImageView
                android:id="@+id/item_grid_iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y40"
                android:src="@drawable/shape_status_alarm" />

            <TextView
                android:id="@+id/item_grid_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y30"
                android:layout_toRightOf="@id/item_grid_iv_status"
                android:textSize="@dimen/city_normal_size" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_grid_layout_struct"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_grid_value2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/city_super_size" />

                <TextView
                    android:id="@+id/item_grid_unit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/city_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_grid_value1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/city_super_size" />

                <TextView
                    android:id="@+id/item_grid_unit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/city_normal_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
