<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_main_home_menu_rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageButton
        android:id="@+id/dialog_main_home_menu_imv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="22dp"
        android:padding="2dp"
        android:background="@color/transparent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/main_menu_close" />

    <LinearLayout
        android:id="@+id/dialog_main_home_menu_ll_quick_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_main_home_menu_imv_close"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_bg_corner_2dp_ff_shadow"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_fast_deploy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_main_home_menu_quick_deploy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/main_home_menu_quick_deploy" />

            <TextView
                android:id="@+id/dialog_main_home_menu_tv_quick_deploy"
                style="@style/style_fg_home_dialog_tv"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_main_home_menu_quick_deploy"
                android:text="@string/quick_deploy" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_fast_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line1"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/c_dfdfdf" />

            <ImageView
                android:id="@+id/iv_main_home_menu_construction"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:layout_below="@id/line1"
                android:src="@drawable/main_home_menu_construction" />

            <TextView
                android:id="@+id/dialog_main_home_menu_new_tv_construction"
                style="@style/style_fg_home_dialog_tv"
                android:layout_below="@id/line1"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_main_home_menu_construction"
                android:text="@string/new_contract" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_fast_scan_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/line2"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/c_dfdfdf" />

            <ImageView
                android:id="@+id/iv_main_home_menu_scan_login"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:layout_below="@id/line2"
                android:src="@drawable/main_home_menu_scan_login" />

            <TextView
                android:id="@+id/dialog_main_home_menu_tv_scan_login"
                style="@style/style_fg_home_dialog_tv"
                android:layout_below="@id/line2"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_main_home_menu_scan_login"
                android:text="@string/scan_login" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>