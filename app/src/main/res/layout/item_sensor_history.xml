<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/item_sensor_history_struct"
        android:layout_marginTop="@dimen/y80"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <TextView
             android:id="@+id/item_sensor_history_value"
             android:textColor="@color/white"
             android:textSize="20sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <TextView
             android:id="@+id/item_sensor_history_unit"
             android:textColor="@color/white"
             android:textSize="10sp"
             android:layout_marginTop="-5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/item_sensor_history_struct"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_sensor_history_date"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:maxLines="1"
            android:layout_marginBottom="@dimen/y80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
