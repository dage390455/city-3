<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:background="@color/white">

        <ImageView
            android:id="@+id/merchant_iv_menu_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="18dp"
            android:src="@mipmap/ic_menu_list" />

        <TextView
            android:id="@+id/merchant_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/merchant_switch"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/x60" />
        <ImageView
            android:id="@+id/merchant_iv_search"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y160"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@mipmap/ic_search"
            />
    </RelativeLayout>
    <View
        android:background="@color/c_e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"/>
    <RelativeLayout
        android:background="@drawable/shape_normal_layout"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y150"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/slide_menu_item_bg"
            android:id="@+id/merchant_current_name"
            android:layout_marginLeft="@dimen/x100"
            android:text="1222333"
            android:layout_marginTop="@dimen/y30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/merchant_current_phone"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginBottom="@dimen/y30"
            android:textSize="16sp"
            android:textColor="@color/c_626262"
            android:layout_centerVertical="true"
            android:layout_below="@+id/merchant_current_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/merchant_current_status"
            android:src="@mipmap/ic_status_selected"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y150"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/merchant_list_sep"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/c_e7e7e7"/>

        <ListView
            android:id="@+id/merchant_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x100"
            android:divider="@color/c_e7e7e7"
            android:dividerHeight="@dimen/y1"/>

        <View
            android:id="@+id/merchant_list_bottom_sep"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/c_e7e7e7"/>
    </LinearLayout>
</LinearLayout>
