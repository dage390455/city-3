<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_solid_ff_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_dialog_add_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="@string/deploy_device_tag_add_tag"
        android:textColor="@color/c_252525"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_bg_solid_ff_stroke_df_corner"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialog_add_tag_et_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:imeOptions="actionDone|actionNext"
            android:textCursorDrawable="@drawable/my_cursor" />

        <ImageView
            android:id="@+id/dialog_add_tag_imv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null"
            android:padding="8dp"
            android:src="@drawable/delete_tag"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_divider_height"
        android:layout_marginTop="24dp"
        android:background="@color/c_dfdfdf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_add_tag_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_item_white_ee_corner_left"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/cancel"
            android:textColor="@color/c_a6a6a6"
            android:textSize="16dp" />

        <View
            android:layout_width="@dimen/view_divider_height"
            android:layout_height="match_parent"
            android:background="@color/c_dfdfdf" />

        <TextView
            android:id="@+id/dialog_add_tag_tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_item_white_ee_corner_right"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/determine"
            android:textColor="@color/c_1dbb99"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>