<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_pop_select_state_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/item_pop_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_f4f4f4"

        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pop_rc_camera_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"

            >

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/item_pop_ll"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_below="@+id/pop_rc_camera_list"
            android:background="@color/white"
            android:gravity="center"


            android:orientation="horizontal">


            <TextView
                android:id="@+id/camera_list_reset_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/reset_filter"
                android:textColor="@color/c_252525"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/camera_list_save_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/c_1dbb99"

                android:gravity="center"
                android:text="@string/save"

                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>


    <View
        android:id="@+id/pop_type_view_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/item_pop_rl" />

</RelativeLayout>