<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_root_item_adapter_alarm_camera_live_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingBottom="16dp"
    android:paddingEnd="20dp"
    android:paddingTop="16dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pic_item_adapter_alarm_camera_live_detail"
        android:layout_width="82dp"
        android:layout_height="62dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_name_item_adapter_alarm_camera_live_detail"
        app:layout_constraintVertical_bias="0">
        <ImageView
            android:id="@+id/iv_pic_item_adapter_alarm_camera_live_detail"
            android:layout_width="82dp"
            android:layout_height="62dp"
            android:scaleType="centerCrop"
            android:background="@color/transparent"
            android:contentDescription="@null"
            />
        <ImageView
            android:id="@+id/iv_live_item_adapter_alarm_camera_live_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alarm_camera_live_btn"
            android:contentDescription="@null"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_watch_state_item_adapter_alarm_camera_live_detail"
            android:layout_width="82dp"
            android:layout_height="62dp"
            android:textColor="@color/white"
            android:visibility="visible"
            android:textSize="12dp"
            android:gravity="center"
            android:background="@color/c_08000000"
            android:text="@string/watching"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_camera_live"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:textSize="10dp"
            android:visibility="visible"
            android:layout_gravity="bottom|start"
            android:paddingBottom="2dp"
            android:background="@drawable/shape_bg_solid_1dbb9_bottomleft_topright_corner_4"
            android:textColor="@color/white"
            />
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/tv_name_item_adapter_alarm_camera_live_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cv_pic_item_adapter_alarm_camera_live_detail"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:textColor="@color/c_252525"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_status_item_adapter_alarm_camera_live_detail"
        android:layout_marginStart="12dp"
        app:layout_constraintHorizontal_bias="0"
        />
    <TextView
        android:id="@+id/tv_status_item_adapter_alarm_camera_live_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@id/tv_name_item_adapter_alarm_camera_live_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@id/tv_name_item_adapter_alarm_camera_live_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>