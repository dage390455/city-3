<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="@dimen/y8"
             android:clickable="false"
             android:focusable="false"
             android:focusableInTouchMode="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x20">

        <TextView
            android:id="@+id/item_alarm_detail_parent_time"
            android:layout_width="@dimen/x250"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y1"
            android:text="11/10 21:00:00"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_normal_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x293">

        <ImageView
            android:id="@+id/item_alarm_detail_parent_status"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/y10"
            android:src="@drawable/shape_time_point"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x310"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/item_alarm_detail_parent_line"
            android:layout_width="@dimen/x3"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y80"
            android:background="@color/c_979797"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y50"
        android:layout_marginLeft="@dimen/x350"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_alarm_detail_parent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x20"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginTop="@dimen/y5"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_normal_size"/>
    </LinearLayout>

</FrameLayout>
