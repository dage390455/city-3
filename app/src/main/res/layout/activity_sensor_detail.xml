<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/sensor_history_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200">
        <ImageView
            android:id="@+id/sensor_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/sensor_detail_title"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_large_size"
            android:text="@string/sensor_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/sensor_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="18dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_detail"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/c_e7e7e7"
        android:contentDescription="@null" />

    <ScrollView
        android:id="@+id/sensor_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/sensor_detail_iv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_sensor_bg_co"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y60"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x100">

                        <ImageView
                            android:id="@+id/sensor_detail_iv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y15"
                            android:background="@drawable/shape_status_alarm" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sensor_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/city_normal_size" />

                        <TextView
                            android:id="@+id/sensor_detail_sn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            android:textSize="@dimen/city_normal_size" />

                        <TextView
                            android:id="@+id/sensor_detail_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y60"
                            android:textSize="@dimen/city_normal_size" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/y8"
                android:layout_height="@dimen/y1"
                android:background="@color/c_e7e7e7"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/sensor_detail_struct_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/y150"
                    android:paddingTop="@dimen/y150">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/struct_left_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/city_super_large_size" />

                        <TextView
                            android:id="@+id/struct_left_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:textSize="@dimen/city_large_size" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/struct_left_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y30"
                        android:textSize="@dimen/x40" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/y8"
                    android:background="@color/c_e7e7e7"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/sensor_detail_struct_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/y150"
                    android:paddingTop="@dimen/y150">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/struct_right_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/city_super_large_size" />

                        <TextView
                            android:id="@+id/struct_right_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:textSize="@dimen/city_large_size" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/struct_right_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y30"
                        android:textSize="@dimen/x40" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_margin="@dimen/y8"
                android:background="@color/c_e7e7e7"
                android:contentDescription="@null" />

            <RelativeLayout
                android:id="@+id/sensor_detail_map_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.amap.api.maps.MapView
                    android:id="@+id/sensor_detail_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y400"
                    android:background="@drawable/shape_sensor_location">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x100"
                        android:layout_marginTop="@dimen/y60"
                        android:textSize="@dimen/city_normal_size"
                        android:text="@string/sensor_location" />
                </LinearLayout>
                <Button
                    android:id="@+id/sensor_detail_navi_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/x160"
                    android:layout_height="@dimen/y100"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/x50"
                    android:layout_marginTop="@dimen/y50"
                    android:padding="@dimen/x5"
                    android:background="@drawable/shape_button_tiny"
                    android:text="@string/navigation"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/sensor_detail_share_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/x160"
                    android:layout_height="@dimen/y100"
                    android:layout_toStartOf="@+id/sensor_detail_navi_btn"
                    android:layout_marginEnd="@dimen/x50"
                    android:layout_marginTop="@dimen/y50"
                    android:padding="@dimen/x5"
                    android:background="@drawable/shape_button_tiny"
                    android:text="@string/detail_share"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:id="@+id/sensor_detail_not_deploy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/no_deploy"
                    android:textSize="15sp"
                    android:layout_marginTop="@dimen/y200"
                    android:layout_marginBottom="@dimen/y200"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/c_e7e7e7"
                android:contentDescription="@null" />

            <LinearLayout
                android:id="@+id/recent_k_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1000"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c_e7e7e7"
                    android:contentDescription="@null" />

                <RelativeLayout
                    android:id="@+id/recent_k_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="@dimen/city_normal_size"
                        android:id="@+id/recent_days_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x75"
                        android:layout_marginTop="@dimen/y45" />

                    <TextView
                        android:id="@+id/recent_days_info1"
                        android:textSize="@dimen/city_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x75"
                        android:layout_marginTop="@dimen/y45"
                        android:drawableLeft="@drawable/shape_blue"
                        android:drawablePadding="@dimen/x15" />

                    <TextView
                        android:id="@+id/recent_days_info2"
                        android:textSize="@dimen/city_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x35"
                        android:layout_marginTop="@dimen/y45"
                        android:layout_toLeftOf="@+id/recent_days_info1"
                        android:drawableLeft="@drawable/shape_status_normal"
                        android:drawablePadding="@dimen/x15"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/y45"
                    android:layout_marginTop="@dimen/y45">

                    <com.github.mikephil.charting.charts.CombinedChart
                        android:id="@+id/sensor_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x75"
                        android:layout_marginRight="@dimen/x75" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_margin="@dimen/y8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/c_e7e7e7"
                android:contentDescription="@null" />

            <LinearLayout
                android:id="@+id/ll_battery_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1000"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/recent_battery_title_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/recent_days_battery_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/city_normal_size"
                        android:layout_marginLeft="@dimen/x75"
                        android:layout_marginTop="@dimen/y45"
                        android:text="@string/sensor_detail_battery" />

                    <TextView
                        android:id="@+id/recent_days_battery_info1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x75"
                        android:layout_marginTop="@dimen/y45"
                        android:drawableLeft="@drawable/shape_blue"
                        android:drawablePadding="@dimen/x15"
                        android:text="@string/sensor_detail_battery"
                        android:textSize="@dimen/city_small_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/recent_days_battery_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y60">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recent_days_battery_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x75"
                        android:layout_marginRight="@dimen/x75" />
                    <com.sensoro.smartcity.widget.BatteryMarkerView
                        android:id="@+id/recent_battery_marker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/recent_days_power_supply"
                    android:layout_marginTop="@dimen/y400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerInParent="true"
                        android:text="@string/power_supply"
                        android:textSize="16sp"
                        android:textColor="@color/c_1b1b1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <!--<ImageView-->
                <!--android:layout_margin="@dimen/y8"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/y1"-->
                <!--android:background="@color/c_e7e7e7"-->
                <!--android:contentDescription="@null" />-->


        </LinearLayout>
    </ScrollView>

</LinearLayout>
