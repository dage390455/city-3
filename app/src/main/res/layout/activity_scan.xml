<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/ac_scan_qr_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1000"
        app:qrcv_barcodeRectHeight="120dp"
        app:qrcv_borderColor="@color/transparent"
        app:qrcv_borderSize="1dp"
        app:qrcv_cornerColor="@color/white"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="5dp"
        app:qrcv_isBarcode="false"
        app:qrcv_isShowDefaultGridScanLineDrawable="true"
        app:qrcv_isShowDefaultScanLineDrawable="true"
        app:qrcv_isShowTipBackground="true"
        app:qrcv_isShowTipTextAsSingleLine="true"
        app:qrcv_isTipTextBelowRect="false"
        app:qrcv_maskColor="#7e000000"
        app:qrcv_qrCodeTipText="对准传感器上的二维码，即可自动扫描"
        app:qrcv_rectWidth="200dp"
        app:qrcv_scanLineColor="@color/colorPrimaryDark"
        app:qrcv_toolbarHeight="56dp"
        app:qrcv_topOffset="@dimen/y500"
        app:qrcv_verticalBias="-1"/>
    <include layout="@layout/item_include_text_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y30"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/ac_scan_tv_input_sn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手动输入SN"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:drawableTop="@drawable/input_sn"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/ac_scan_tv_open_flashlight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="打开手电筒"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:drawableTop="@drawable/open_flashlight"
            android:drawablePadding="8dp"/>

