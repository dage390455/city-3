<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/item_alert_content_imv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@null"
        android:src="@drawable/phone_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_alert_content_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:lineSpacingExtra="4dp"
        android:text="系统将拨打电话至"
        android:textColor="@color/c_a6a6a6"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_alert_content_imv_icon"
        app:layout_constraintTop_toTopOf="@id/item_alert_content_imv_icon" />

    <LinearLayout
        android:id="@+id/ll_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/item_alert_content_tv_content"
        app:layout_constraintTop_toBottomOf="@id/item_alert_content_tv_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="预警结果:"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size" />

            <TextView
                android:id="@+id/item_alarm_detail_child_alarm_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="预警成因:"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size" />

            <TextView
                android:id="@+id/item_alarm_detail_child_alarm_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="预警场所:"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size" />

            <TextView
                android:id="@+id/item_alarm_detail_child_alarm_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:text="备注说明:"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size" />

            <TextView
                android:id="@+id/item_alarm_detail_child_alarm_remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_size" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_alarm_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay" />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/item_alert_content_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="今天 10：14：28"
        android:textColor="@color/c_a6a6a6"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/ll_confirm"
        app:layout_constraintTop_toBottomOf="@id/ll_confirm" />

</android.support.constraint.ConstraintLayout>