<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_merchant_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:src="@drawable/arrow_down_elect" />

        <TextView
            android:id="@+id/item_merchant_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="1212"
            android:textColor="@color/c_252525"
            android:textSize="16dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_merchant_sub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:background="@color/c_fafafa"
        android:paddingBottom="4dp"
        android:visibility="gone" />

    <ImageView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/item_bottom_s"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_e7e7e7"
        android:visibility="gone" />
</LinearLayout>
