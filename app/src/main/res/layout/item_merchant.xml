<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/x100"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_merchant_icon"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_merchant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginTop="@dimen/y30"
        android:textColor="@color/c_626262"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/item_merchant_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_merchant_name"
        android:layout_below="@id/item_merchant_name"
        android:layout_marginBottom="@dimen/y30"
        android:textColor="#9b9b9b"
        android:textSize="@dimen/x45"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_merchant_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginTop="@dimen/y80" />

    <ImageView
        android:id="@+id/item_bottom_s"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:background="@color/c_e7e7e7"
        android:visibility="gone" />
</RelativeLayout>
