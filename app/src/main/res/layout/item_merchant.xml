<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/x100"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/item_merchant_icon"
        android:src="@mipmap/avatar"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/x50"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150" />
    <TextView
        android:id="@+id/item_merchant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:text="aaaaa"
        android:textSize="@dimen/x50"
        android:textColor="@color/c_626262"
        android:layout_alignTop="@id/item_menu_icon"

        />
    <TextView
        android:layout_below="@id/item_merchant_name"
        android:layout_alignLeft="@id/item_merchant_name"
        android:id="@+id/item_merchant_phone"
        android:text="bbb"
        android:layout_marginBottom="@dimen/y30"
        android:textSize="@dimen/x45"
        android:textColor="#9b9b9b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item_merchant_status"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginTop="@dimen/y80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
