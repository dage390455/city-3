<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/ac_deploy_result_title"
        layout="@layout/item_include_text_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ac_deploy_result_title"
        android:background="@color/c_fafafa" />

    <LinearLayout
        android:id="@+id/ac_deploy_result_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/ac_deploy_result_tv_back_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_corner_fa_shadow"
            android:gravity="center"
            android:padding="10dp"
            android:text="返回主页"
            android:textColor="@color/c_252525"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ac_deploy_result_tv_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_corner_29c_shadow"
            android:gravity="center"
            android:padding="10dp"
            android:text="继续部署"
            android:textColor="@color/c_252525"
            android:textSize="16sp" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ac_deploy_result_bottom"
        android:layout_below="@id/ac_deploy_result_title"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ac_deploy_result_imv_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/deploy_succeed" />

            <TextView
                android:id="@+id/ac_deploy_result_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="成功"
                android:textColor="@color/c_29c093"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ac_deploy_result_tv_state_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="恭喜！传感器点位部署成功"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ac_deploy_result_tv_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="恭喜！传感器点位部署成功"
                android:textColor="@color/c_f34a4a"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ac_deploy_result_ll_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:background="@drawable/shape_bg_corner_fa_shadow"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:id="@+id/ac_deploy_result_ll_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备号:"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_sn"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_height="wrap_content"
                        android:text="未知"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ac_deploy_result_ll_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名称:"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="未知"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ac_deploy_result_ll_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="位置:"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:text="未知"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ac_deploy_result_ll_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人:"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="未知"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ac_deploy_result_ll_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="状态:"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:text="未知"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_signal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/shape_bg_solid_b6_full_corner"
                        android:paddingBottom="4dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="4dp"
                        android:text="信号 无"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ac_deploy_result_ll_recent_upload_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近上传时间:"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_recent_upload_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="未知"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


