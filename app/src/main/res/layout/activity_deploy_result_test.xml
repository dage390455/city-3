<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ac_deploy_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/deploy_result_confirm_information"
        android:textColor="@color/c_252525"
        android:textSize="18dp" />


    <View
        android:id="@+id/ac_deploy_result_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_divider_height"
        android:background="@color/c_dfdfdf" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/ac_deploy_result_imv_icon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/ac_deploy_result_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:textColor="@color/c_1dbb99"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/ac_deploy_result_tv_state_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="1111"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14dp" />

            <!--<TextView-->
                <!--android:id="@+id/ac_deploy_result_tv_error_msg"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginStart="20dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:layout_marginEnd="20dp"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/deploy_result_successed"-->
                <!--android:textColor="@color/c_a6a6a6"-->
                <!--android:textSize="14dp"-->
                <!--android:visibility="gone" />-->

            <LinearLayout
                android:id="@+id/ac_deploy_result_ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_bg_corner_fa_shadow"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:id="@+id/rl_ac_deploy_resul_sn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deploy_result_device_number_sn"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_sn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="@string/unknown"
                        android:textColor="@color/c_252525"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ac_deploy_result_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deploy_result_name"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="@string/unknown"
                        android:textColor="@color/c_252525"
                        android:textSize="12dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ac_deploy_result_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deploy_result_contract"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="@string/unknown"
                        android:textColor="@color/c_252525"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ac_deploy_result_we_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deploy_record_deploy_we_chat"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_we_chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="@string/unknown"
                        android:textColor="@color/c_252525"
                        android:textSize="12dp" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_ac_deploy_result_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_divider_height"
                    android:layout_marginTop="8dp"
                    android:background="@color/c_dfdfdf"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_ac_deploy_result_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deploy_device_detail_deploy_location"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="@string/unknown"
                        android:textColor="@color/c_252525"
                        android:textSize="12dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_ac_deploy_result_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/deploy_result_status"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ac_deploy_result_tv_signal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="4dp"
                            android:textColor="@color/c_252525"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/ac_deploy_result_tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="12dp"
                            android:text="@string/unknown"
                            android:textColor="@color/c_1dbb99"
                            android:textSize="12dp" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ac_deploy_result_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/initial_configuration"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="@string/had_setting_detail"
                        android:textColor="@color/c_252525"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ac_deploy_result_recent_upload_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deploy_record_deploy_time"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/ac_deploy_result_tv_recent_upload_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="@string/unknown"
                        android:textColor="@color/c_252525"
                        android:textSize="12dp" />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ac_deploy_result_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/ac_deploy_result_tv_back_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_solid_fa_stroke_df_corner_4dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/deploy_result_back_home"
            android:textColor="@color/c_252525"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ac_deploy_result_tv_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_corner_29c_shadow"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/deploy_result_continue"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>

