<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_fafafa"
        android:orientation="vertical">

        <include layout="@layout/item_include_text_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="名称/地址"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ac_deploy_device_detail_et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:gravity="end"
                android:text="小刘模板充棉加工厂车间工厂车间5"
                android:textColor="@color/c_252525"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/c_dfdfdf" />

        <LinearLayout
            android:id="@+id/ac_deploy_device_detail_ll_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="标签"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="end"
                android:text="小刘模板充棉加工厂车间工厂车间5"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:contentDescription="@null"
                android:src="@drawable/arrows_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/c_dfdfdf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="预警联系人"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ac_deploy_device_detail_et_alert_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:gravity="end"
                android:text="詹姆斯"
                android:textColor="@color/c_252525"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/c_dfdfdf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="预警电话"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ac_deploy_device_detail_et_alert_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="20dp"
                android:background="@null"
                android:gravity="end"
                android:text="18323456789"
                android:textColor="@color/c_252525"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/c_dfdfdf" />

        <LinearLayout
            android:id="@+id/ac_deploy_device_detail_ll_deploy_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="部署照片"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="end"
                android:text="小刘模板充棉加工厂车间工厂车间5"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:contentDescription="@null"
                android:src="@drawable/arrows_right" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ac_deploy_device_detail_ll_fixed_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="位置"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="end"
                android:text="小刘模板充棉加工厂车间工厂车间5"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:text="拖动地图确认打点位置"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/ac_deploy_device_detail_tv_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/shape_bg_corner_29c_shadow"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
</RelativeLayout>
