<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_type_root"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/pop_type_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_type_tv_select_rl_title"
        android:background="@color/c_fafafa">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/pop_type_select_rc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

        </android.support.v7.widget.RecyclerView>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/pop_type_tv_select_rl_title"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/pop_type_tv_select_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:drawableEnd="@drawable/main_small_triangle"
            android:drawablePadding="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/all_types"
            android:layout_marginBottom="16dp"
            android:textColor="@color/c_252525"
            android:textSize="18sp" />
        <View
            android:layout_below="@id/pop_type_tv_select_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_divider_width"
            android:background="@color/c_dfdfdf"/>
    </RelativeLayout>



    <View
        android:id="@+id/pop_type_view_cancel"
        android:layout_below="@id/pop_type_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>