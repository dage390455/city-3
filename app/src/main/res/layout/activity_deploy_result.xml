<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:background="@color/white">

        <ImageView
            android:id="@+id/deploy_result_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="12dp"
            android:src="@mipmap/ic_back"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/deploy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/confirm_info"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/x60"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y100"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/deploy_result_iv"
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/y350"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="12dp"
            android:src="@mipmap/ic_deploy_success"/>

        <TextView
            android:id="@+id/deploy_result_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:textColor="@color/c_626262"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deploy_result_sn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginTop="@dimen/y50"
            android:textColor="@color/c_626262"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/deploy_result_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:textColor="@color/c_626262"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/deploy_result_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:textColor="@color/c_626262"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/deploy_result_lon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:textColor="@color/c_626262"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/deploy_result_lan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:textColor="@color/c_626262"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/deploy_result_contact_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:textColor="@color/c_626262"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/deploy_result_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:textColor="@color/c_626262"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deploy_result_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_626262"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/deploy_result_signal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x260"
                android:layout_toRightOf="@+id/deploy_result_status_tv"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/deploy_result_update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:textColor="@color/c_626262"
            android:textSize="16sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/x30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/deploy_result_continue_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x100"
                android:layout_marginRight="@dimen/x100"
                android:background="@drawable/shape_button"
                android:text="@string/continue_deploy"
                android:textColor="@color/white"
                android:textSize="@dimen/city_btn_text_size"/>

            <Button
                android:id="@+id/deploy_result_back_home"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x100"
                android:layout_marginRight="@dimen/x100"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/shape_button_default"
                android:text="@string/back_home"
                android:textColor="@color/c_626262"
                android:textSize="@dimen/city_btn_text_size"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
