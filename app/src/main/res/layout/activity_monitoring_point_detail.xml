<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_fafafa"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include
            android:id="@+id/ac_monitoring_point_ic_title"
            layout="@layout/item_include_imv_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ac_monitoring_point_tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/c_252525"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/ac_monitoring_point_imv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="55dp"
                    android:contentDescription="@null"
                    android:src="@drawable/monitoring_point" />

            </LinearLayout>

            <TextView
                android:id="@+id/ac_monitoring_point_tv_type_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/c_252525"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="监控参数"
                android:textColor="@color/c_a6a6a6"
                android:textSize="12sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ac_monitoring_point_rc_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ac_monitoring_point_cl_alert_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ac_monitoring_point_tv_alert_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:text="预警联系人"
                    android:textColor="@color/c_a6a6a6"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ac_monitoring_point_tv_alert_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:text="齐哲"
                    android:textColor="@color/c_252525"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ac_monitoring_point_tv_alert_contact" />

                <View
                    android:id="@+id/ac_monitoring_point_view"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/c_252525"
                    app:layout_constraintBottom_toBottomOf="@id/ac_monitoring_point_tv_alert_contact_name"
                    app:layout_constraintStart_toEndOf="@id/ac_monitoring_point_tv_alert_contact_name"
                    app:layout_constraintTop_toTopOf="@id/ac_monitoring_point_tv_alert_contact_name" />

                <TextView
                    android:id="@+id/ac_monitoring_point_tv_alert_contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:text="18623459876"
                    android:textColor="@color/c_252525"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/ac_monitoring_point_tv_alert_contact_name"
                    app:layout_constraintStart_toStartOf="@id/ac_monitoring_point_view" />

                <ImageView
                    android:id="@+id/ac_monitoring_point_imv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/monitoring_phone"
                    app:layout_constraintBottom_toBottomOf="@id/ac_monitoring_point_tv_alert_contact_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ac_monitoring_point_tv_alert_contact" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/ac_monitoring_point_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:background="@color/c_dfdfdf" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ac_monitoring_point_cl_location_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/ac_monitoring_point_tv_location_navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="位置导航"
                    android:textColor="@color/c_a6a6a6"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView
                    android:id="@+id/ac_monitoring_point_tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/c_252525"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ac_monitoring_point_tv_location_navigation" />

                <ImageView
                    android:id="@+id/ac_monitoring_point_imv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/arrows_right"
                    app:layout_constraintBottom_toBottomOf="@id/ac_monitoring_point_tv_location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ac_monitoring_point_tv_location_navigation" />

            </android.support.constraint.ConstraintLayout>


        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/ac_monitoring_point_tv_operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="操作"
                android:textColor="@color/c_252525"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ac_monitoring_point_tv_alarm_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/alarm_sound"
                android:text="发声报警"
                android:textColor="@color/c_252525"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ac_monitoring_point_tv_operation"

                />

            <TextView
                android:id="@+id/ac_monitoring_point_tv_hardware_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/hardware_upgrade"
                android:text="固件升级"
                android:textColor="@color/c_252525"
                app:layout_constraintBottom_toBottomOf="@id/ac_monitoring_point_tv_alarm_sound"
                app:layout_constraintStart_toEndOf="@id/ac_monitoring_point_tv_alarm_sound" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</ScrollView>
