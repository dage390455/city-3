<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        android:id="@+id/ac_alert_log_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/item_include_text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
<TextView
    android:id="@+id/ac_alert_log_tv_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="小刘模板充棉加工厂车间工厂车间"
    android:textSize="20sp"
    android:textColor="@color/c_252525"
    app:layout_constraintTop_toBottomOf="@id/ac_alert_log_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    />
    <TextView
        android:id="@+id/ac_alert_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:14:28"
        android:textColor="@color/c_252525"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/ac_alert_log_tv_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/ac_alert_tv_time">
        <LinearLayout
            android:id="@+id/ac_alert_ll_alert_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_corner_f34_shadow"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ac_alert_imv_alert_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alert_time"
                android:layout_marginTop="18dp"
                android:layout_marginStart="18dp"
                android:contentDescription="@null"
                />
            <TextView
                android:id="@+id/ac_alert_tv_alert_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上午 10：14：28"
                android:layout_marginStart="16dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:id="@+id/ac_alert_tv_alert_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报警时间"
                android:layout_marginStart="16dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ac_alert_ll_alert_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_corner_fa_shadow"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ac_alert_imv_alert_count_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alert_count"
                android:layout_marginTop="18dp"
                android:layout_marginStart="18dp"
                android:contentDescription="@null"
                />
            <TextView
                android:id="@+id/ac_alert_tv_alert_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上午 10：14：28"
                android:layout_marginStart="16dp"
                android:textColor="@color/c_252525"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:id="@+id/ac_alert_tv_alert_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="半年累计报警次数"
                android:layout_marginStart="16dp"
                android:textColor="@color/c_a6a6a6"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="联系业主"
            android:textSize="12sp"
            android:textColor="@color/c_252525"
            android:paddingStart="27dp"
            android:paddingEnd="27dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="联系业主"
            android:textSize="12sp"
            android:textColor="@color/c_252525"
            android:paddingStart="27dp"
            android:paddingEnd="27dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="联系业主"
            android:textSize="12sp"
            android:textColor="@color/c_252525"
            android:paddingStart="27dp"
            android:paddingEnd="27dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>