<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/white"
   >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/item_adapter_inspection_task_ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_adapter_inspection_task_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_252525"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/item_adapter_inspection_task_tv_near"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="附近"
                android:textColor="@color/c_29c093"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/item_adapter_inspection_task_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:textSize="12sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/item_adapter_inspection_task_tv_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/c_888888"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_adapter_inspection_task_ll_top" />

        <View
            android:id="@+id/item_adapter_inspection_task_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/c_dfdfdf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_adapter_inspection_task_tv_sn" />

        <TextView
            android:id="@+id/item_adapter_inspection_task_tv_inspection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_bg_corner_2dp_29c_shadow"
            android:paddingBottom="6dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="6dp"
            android:text="巡检"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_adapter_inspection_task_view"

            />

        <TextView
            android:id="@+id/item_adapter_inspection_task_tv_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_bg_solid_fa_stroke_df_corner_2dp"
            android:paddingBottom="6dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="6dp"
            android:text="导航"
            app:layout_goneMarginEnd="0dp"
            android:textColor="@color/c_252525"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_adapter_inspection_task_tv_inspection"
            app:layout_constraintTop_toBottomOf="@id/item_adapter_inspection_task_view" />


    </android.support.constraint.ConstraintLayout>
</FrameLayout>
