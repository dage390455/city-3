<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f4f4f4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/item_include_text_title" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="进场提示"
                android:textColor="@color/c_252525"
                android:textSize="16dp" />

            <!--<ImageView-->
            <!--android:id="@+id/devicein_iv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:paddingEnd="20dp"-->
            <!--android:src="@drawable/ic_switch_none" />-->

            <Switch
                android:id="@+id/devicein_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"

                android:checked="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进场提示消息"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/devicein_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_et_search"
                android:cursorVisible="true"
                android:enabled="true"
                android:gravity="top"
                android:hint="请输入"
                android:text="检测到附近传感器，点击查看详情"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/c_626262"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="14dp" />


        </LinearLayout>

        <!--      <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/view_divider_height"
                  android:layout_marginStart="20dp"
                  android:layout_marginEnd="20dp"
                  android:background="@color/c_dfdfdf"
                  android:contentDescription="@null" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="离场提示"
                android:textColor="@color/c_252525"
                android:textSize="16dp" />

            <Switch
                android:id="@+id/deviceout_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"

                android:checked="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离场提示信息"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/deviceout_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_et_search"
                android:cursorVisible="true"
                android:enabled="true"
                android:gravity="top"
                android:hint="请输入"
                android:text="已离开传感器检测区域"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/c_626262"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UUID"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/ll_device_uuid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_device_uuid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_et_search"
                    android:enabled="true"
                    android:gravity="top"
                    android:maxLength="100"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/c_626262"
                    android:textCursorDrawable="@drawable/my_cursor"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Major"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_device_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_et_search"
                android:cursorVisible="true"
                android:enabled="true"
                android:gravity="top"
                android:hint="请输入"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/c_626262"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mirror"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_device_mirror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_et_search"
                android:cursorVisible="true"
                android:enabled="true"
                android:gravity="top"
                android:hint="请输入"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/c_626262"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="14dp" />


        </LinearLayout>
        <!-- <ImageView
             android:layout_width="match_parent"
             android:layout_height="@dimen/view_divider_height"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp"
             android:background="@color/c_dfdfdf"
             android:contentDescription="@null" />-->
    </LinearLayout>


</RelativeLayout>
