<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/shape_bg_solid_ff_corner">
    <TextView
        android:id="@+id/tv_title_item_dialog_video_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_252525"
        android:textSize="18dp"
        android:text="@string/download_video_to_album"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        />
    <TextView
        android:id="@+id/tv_tip_item_dialog_video_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12dp"
        android:layout_marginTop="12dp"
        />
    
    <ProgressBar
        android:id="@+id/pb_download_item_dialog_video_download"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"
        tools:max="100"
        android:progress="20"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_divider_height"
        android:background="@color/c_dfdfdf"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel_item_dialog_video_download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/selector_item_white_ee_corner_left"
            android:textColor="@color/c_252525"
            android:gravity="center"/>
        <View
            android:layout_width="@dimen/view_divider_width"
            android:layout_height="match_parent"
            android:background="@color/c_dfdfdf"/>

        <TextView
            android:id="@+id/tv_confirm_item_dialog_video_download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dialog_input_confirm"
            android:textSize="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/selector_item_white_ee_corner_right"
            android:textColor="@color/c_1dbb99"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>