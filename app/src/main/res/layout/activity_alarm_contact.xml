<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f4f4f4"
    >

    <include
        android:id="@+id/ac_alarm_contact_title"
        layout="@layout/item_include_text_text_title" />

    <LinearLayout
        android:id="@+id/ac_name_address_ll_add_name_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:layout_below="@id/ac_alarm_contact_title"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alert_contact"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/c_a6a6a6"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/ac_name_address_et_alarm_contact_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/alarm_contact_tip_sample"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:textCursorDrawable="@null"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="8dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_divider_height"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/c_dfdfdf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_contact_tip_phone"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/c_a6a6a6"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
            <EditText
                android:id="@+id/ac_name_address_et_alarm_contact_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/alarm_contact_tip_phone_sample"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="8dp"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>



