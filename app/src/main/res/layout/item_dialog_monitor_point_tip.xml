<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_solid_ff_corner"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_monitor_point_operating_imv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:contentDescription="@null"
        android:src="@drawable/monitor_point_loading" />

    <TextView
        android:id="@+id/dialog_monitor_point_operating_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/c_252525"
        android:textSize="18sp"
        android:textStyle="" />

</LinearLayout>