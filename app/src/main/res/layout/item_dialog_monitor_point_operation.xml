<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_solid_ff_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tip_operation_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="打开蓝牙来允许“CITY”链接设备"
        android:textColor="@color/c_25292d"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_tip_operation_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="为了您的功能正常使用，请打开蓝牙和定位"
        android:textColor="@color/c_a6a6a6"
        android:textSize="14sp" />
    <LinearLayout
        android:id="@+id/dialog_operation_ll_et_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:padding="1dp"
        android:visibility="gone"
        android:background="@drawable/shape_corner_b6_bg_stroke"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/electric_current"
            android:textSize="14sp"
            android:padding="12dp"
            android:textColor="@color/c_a6a6a6"
            />
        <EditText
            android:id="@+id/dialog_operation_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/c_252525"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/c_a6a6a6"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"

        android:background="@color/c_dfdfdf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_tip_operation_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_item_white_ee_corner_left"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="好"
            android:textColor="@color/c_a6a6a6"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/c_dfdfdf" />

        <TextView
            android:id="@+id/dialog_tip_operation_tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_item_white_ee_corner_right"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="设置"
            android:textColor="@color/c_29c093"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>