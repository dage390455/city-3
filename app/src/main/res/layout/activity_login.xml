<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.sensoro.smartcity.widget.SensoroImageView
            android:id="@+id/login_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_login_bg"/>
    </LinearLayout>

    <View
        android:id="@+id/login_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y400"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_login_logo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y240"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y180"
                android:layout_marginLeft="@dimen/x105"
                android:layout_marginRight="@dimen/x105"
                android:background="@drawable/shape_et_login"
                android:gravity="left|center_vertical"
                android:hint="@string/account"
                android:inputType="none"
                android:maxLines="1"
                android:paddingLeft="@dimen/x50"
                android:text=""
                android:textColor="@color/c_626262"
                android:textColorHint="@color/c_626262"
                android:textSize="15sp">
            </EditText>
            <!--13811208812-->
            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y180"
                android:layout_marginLeft="@dimen/x105"
                android:layout_marginRight="@dimen/x105"
                android:layout_marginTop="@dimen/y35"
                android:background="@drawable/shape_et_login"
                android:gravity="left|center_vertical"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="@dimen/x50"
                android:text=""
                android:textColor="@color/c_626262"
                android:textColorHint="@color/c_626262"
                android:textSize="15sp">
            </EditText>
            <!--Bjsz13811208812S-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y130"
            android:gravity="center">

            <Button
                android:id="@+id/login_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x105"
                android:layout_marginRight="@dimen/x105"
                android:background="@drawable/shape_button"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/city_btn_text_size"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y50"
            android:text="CopyrightÂ©2017 SENSORO"/>
    </LinearLayout>
</FrameLayout>
