<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ac_login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:src="@mipmap/ic_login_logo" />
        <TextView
            android:id="@+id/ac_login_tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sensoro_city"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:textSize="20sp"
            android:textColor="@color/c_252525"
            />
        <TextView
            android:id="@+id/ac_login_tv_logo_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生活更便捷 城市更安全"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/c_252525"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_bg_solid_f7_corner"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ac_login_imv_account_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/login_account_person_normal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="14dp"
                />
            <EditText
                android:id="@+id/ac_login_et_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入账号"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textColorHint="@color/c_a6a6a6"
                android:textColor="@color/c_252525"
                android:layout_marginStart="16dp"/>
            <ImageView
                android:id="@+id/ac_login_imv_account_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/login_clear"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_bg_solid_f7_corner"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ac_login_imv_psd_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/login_psd"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="14dp"
                />
            <EditText
                android:id="@+id/ac_login_et_psd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textColorHint="@color/c_a6a6a6"
                android:textColor="@color/c_252525"
                android:layout_marginStart="16dp"/>
            <ImageView
                android:id="@+id/ac_login_imv_psd_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/login_clear"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/login_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/shape_button"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/city_btn_text_size" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/ac_login_tv_logo_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y50"
            android:text="Copyright © 2018 SENSORO" />
    </LinearLayout>
</FrameLayout>
