<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deploy_record_device_number"
            android:textColor="@color/c_a6a6a6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_adapter_deploy_record_tv_sn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="86dp"
            android:textColor="@color/c_252525"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deploy_record_name"
            android:textColor="@color/c_a6a6a6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_adapter_deploy_record_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:textColor="@color/c_252525"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deploy_device_type"
            android:textColor="@color/c_a6a6a6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_adapter_deploy_record_tv_device_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:text="@string/unknown"
            android:textColor="@color/c_252525"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sensor_detail_tag"
            android:textColor="@color/c_a6a6a6"
            android:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_adapter_deploy_record_rc_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="78dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deploy_record_deploy_time"
            android:textColor="@color/c_a6a6a6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_adapter_deploy_record_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:textColor="@color/c_252525"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>