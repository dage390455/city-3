<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_root_item_adapter_camera_detail_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fl_avatar_item_adapter_camera_detail_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        >
        <ImageView
            android:id="@+id/iv_avatar_item_adapter_camera_detail_list"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="@null"

            />
    </FrameLayout>

    <View
        android:id="@+id/view_above_item_adapter_camera_detail_list"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="@color/c_dfdfdf"
        app:layout_constraintStart_toStartOf="@id/fl_avatar_item_adapter_camera_detail_list"
        app:layout_constraintEnd_toEndOf="@id/fl_avatar_item_adapter_camera_detail_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fl_avatar_item_adapter_camera_detail_list"
        />
    <View
        android:id="@+id/view_below_item_adapter_camera_detail_list"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="@color/c_dfdfdf"
        app:layout_constraintStart_toStartOf="@id/fl_avatar_item_adapter_camera_detail_list"
        app:layout_constraintEnd_toEndOf="@id/fl_avatar_item_adapter_camera_detail_list"
        app:layout_constraintTop_toBottomOf="@id/fl_avatar_item_adapter_camera_detail_list"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tv_time_item_adapter_camera_detail_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/fl_avatar_item_adapter_camera_detail_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>