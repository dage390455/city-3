<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f4f4f4"
    android:orientation="vertical">

    <include layout="@layout/item_include_text_title_step" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_deploy_check_circle_step_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_deploy_check_select"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_deploy_check_title_step_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/deploy_check_title_step_1"
                android:textColor="@color/c_252525"
                android:textSize="14dp" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:gravity="center_vertical"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_deploy_check_circle_step_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_deploy_check_un_select"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/c_a6a6a6"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_deploy_check_title_step_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:text="@string/deploy_check_title_step_2"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14dp" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:gravity="center_vertical"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_deploy_check_circle_step_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_deploy_check_un_select"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/c_a6a6a6"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_deploy_check_title_step_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:text="@string/deploy_check_title_step_3"
                android:textColor="@color/c_a6a6a6"
                android:textSize="14dp" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_deploy_check_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>