<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    android:background="@color/white">
<TextView
    android:id="@+id/item_adapter_inspection_instruction_content_tv_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="16dp"
    android:textSize="16sp"
    android:textColor="@color/c_252525"
    />
    <TextView
        android:id="@+id/item_adapter_inspection_instruction_content_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textColor="@color/c_a6a6a6"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_adapter_inspection_instruction_content_rc_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>