<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200">

        <ImageView
            android:id="@+id/deploy_manual_close"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y160"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/x50"
            android:cropToPadding="true"
            android:padding="10dp"
            android:src="@mipmap/ic_close" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y150"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:text="@string/tips_input_machine_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/deploy_manual_et"
            android:gravity="center"
            android:layout_marginTop="@dimen/y100"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:background="@drawable/shape_et_deploy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200" />
        <Button
            android:id="@+id/deploy_next_btn"
            android:layout_marginTop="@dimen/y200"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginRight="@dimen/x100"
            android:layout_marginBottom="@dimen/y150"
            android:layout_width="match_parent"
            android:text="@string/next"
            android:textSize="@dimen/city_btn_text_size"
            android:textColor="@color/white"
            android:background="@drawable/shape_button"
            android:layout_height="@dimen/y160" />
    </LinearLayout>
</LinearLayout>
