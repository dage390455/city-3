<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f4f4f4"
    android:orientation="vertical">

    <include layout="@layout/item_include_text_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_f4f4f4"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_contract_service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_contract_service_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tv_contract_service_line1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/legal_representative"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/et_contract_service_line1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:textColor="@color/c_252525"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_contract_service_line1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@mipmap/ic_et_delete"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line_phone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_service_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tv_contract_service_phone"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/phone_num"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/et_contract_service_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:textColor="@color/c_252525"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_contract_service_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@mipmap/ic_et_delete"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_service_line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tv_contract_service_line2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/company_name"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/et_contract_service_line2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:textColor="@color/c_252525"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_show_contract_service_line2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:textColor="@color/c_626262"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_contract_service_line2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="center_vertical"
                        android:src="@mipmap/ic_forward"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_service_line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tv_contract_service_line3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/social_credit_code"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/et_contract_service_line3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:textColor="@color/c_252525"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_contract_service_line3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@mipmap/ic_et_delete"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_service_line4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tv_contract_service_line4"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/contract_info_registration_number"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/et_contract_service_line4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:cropToPadding="true"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/c_252525"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_contract_service_line4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@mipmap/ic_et_delete"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_service_line5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tv_contract_service_line5"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/address"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/et_contract_service_line5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:cropToPadding="true"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/c_252525"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_contract_service_line5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@mipmap/ic_et_delete"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_service_line6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tv_contract_service_line6"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/contract_info_validity_period"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/et_contract_service_line6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:textColor="@color/c_252525"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_contract_service_line6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@mipmap/ic_et_delete"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line_place"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_service_place_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tv_contract_service_place_type_title"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/contract_info_site_nature"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_contract_service_place_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:textColor="@color/c_252525"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="center_vertical"
                        android:src="@mipmap/ic_forward" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/contract_info_contract_service_life"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:text="1年"
                            android:textColor="@color/c_252525"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_contract_age_del"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/contact_template_del" />

                        <EditText
                            android:id="@+id/et_contract_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:textCursorDrawable="@drawable/my_cursor"
                            android:cropToPadding="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxEms="5"
                            android:maxLength="5"
                            android:minEms="3"
                            android:padding="10dp"
                            android:text="1"
                            android:textColor="@color/c_626262"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_contract_age_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/contract_template_add" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:text="首次付款"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_contract_age_first_del"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/contact_template_del" />

                        <EditText
                            android:id="@+id/et_contract_age_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:textCursorDrawable="@drawable/my_cursor"
                            android:cropToPadding="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxEms="5"
                            android:maxLength="5"
                            android:minEms="3"
                            android:padding="10dp"
                            android:text="1"
                            android:textColor="@color/c_626262"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_contract_age_first_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/contract_template_add" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:text="续费周期"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_contract_age_period_del"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/contact_template_del" />

                        <EditText
                            android:id="@+id/et_contract_age_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:textCursorDrawable="@drawable/my_cursor"
                            android:cropToPadding="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxEms="5"
                            android:maxLength="5"
                            android:minEms="3"
                            android:padding="10dp"
                            android:text="1"
                            android:textColor="@color/c_626262"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_contract_age_period_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/contract_template_add" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sensor_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/bt_next"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="@dimen/y50"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="@dimen/y50"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="@string/contract_service_next"
        android:textColor="@color/white"
        android:textSize="@dimen/city_btn_text_size" />

</LinearLayout>
