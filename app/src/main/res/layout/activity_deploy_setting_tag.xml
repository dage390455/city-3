<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.sensoro.smartcity.activity.DeploySettingTagActivity">

    <RelativeLayout
        android:id="@+id/deploy_setting_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/deploy_setting_tag_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="15dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/deploy_setting_tag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_tag"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_large_size" />

        <TextView
            android:id="@+id/deploy_setting_tag_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x50"
            android:text="@string/finish"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_tiny_large_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/c_e7e7e7" />

    <LinearLayout
        android:id="@+id/deploy_setting_tag_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginTop="@dimen/y50"
        android:background="@drawable/shape_et_deploy">

        <mabbas007.tagsedittext.TagsEditText
            android:id="@+id/deploy_setting_tag_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/tips_input_tag"
            android:inputType="text"
            android:paddingBottom="@dimen/x15"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:paddingTop="@dimen/x15"
            android:textSize="15sp"
            TagsEditText:allowSpaceInTag="false"
            TagsEditText:tagsBackground="@drawable/shape_textview"
            TagsEditText:tagsCloseImageRight="@drawable/ic_text_del" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deploy_setting_tag_history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deploy_setting_tag_history_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginTop="@dimen/y60"
            android:text="@string/all_tag"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_tiny_large_size" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/deploy_setting_tag_history_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y45" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deploy_setting_tag_relation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/deploy_setting_tag_relation_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y45" />
    </LinearLayout>
</LinearLayout>
