<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.sensoro.smartcity.activity.DeploySettingTagActivity">
    <RelativeLayout
        android:id="@+id/deploy_setting_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:gravity="center_vertical"
       >

        <ImageView
            android:id="@+id/deploy_setting_tag_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:padding="15dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/deploy_setting_tag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_tag"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_large_size" />
        <TextView
            android:id="@+id/deploy_setting_tag_finish"
            android:text="@string/finish"
            android:textSize="@dimen/city_tiny_large_size"
            android:textColor="@color/c_626262"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x50"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/c_e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y3"/>
    <LinearLayout
        android:id="@+id/deploy_setting_tag_input_layout"
        android:background="@drawable/shape_et_deploy"
        android:layout_marginTop="@dimen/y50"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x50"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sensoro.smartcity.widget.TagsEditText
            android:id="@+id/deploy_setting_tag_et"
            TagsEditText:allowSpaceInTag="false"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x30"
            android:textSize="@dimen/city_normal_size"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="text"
            android:hint="@string/tips_hint_name_address_set"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/deploy_setting_tag_history_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/deploy_setting_tag_history_tv"
            android:text="@string/all_tag"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginTop="@dimen/y60"
            android:textSize="@dimen/city_tiny_large_size"
            android:textColor="@color/c_626262"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/deploy_setting_tag_history_rv"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/deploy_setting_tag_relation_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/deploy_setting_tag_relation_rv"
            android:layout_marginTop="@dimen/y45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
