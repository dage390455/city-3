<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f4f4f4"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/contract_info_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_contract_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="12dp"
            android:src="@drawable/arrows_left" />
        <TextView
            android:id="@+id/contract_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_contract_info_back"
            android:text="物联网消防安全预警服务合同"
            android:textColor="@color/c_252525"
            android:textSize="@dimen/city_large_size" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_f4f4f4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/c_f4f4f4">

            <LinearLayout
                android:id="@+id/ll_contract_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y60"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_contract_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_contract_info_line1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="法定代表人"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/et_contract_info_line1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line_phone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_info_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_contract_info_phone"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="手机号"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/et_contract_info_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_info_line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_contract_info_line2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:text="企业名称"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/et_contract_info_line2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_info_line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_contract_info_line3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:text="社会信用代码"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/et_contract_info_line3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_info_line4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_contract_info_line4"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:text="注册号"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/et_contract_info_line4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:gravity="end"
                        android:layout_marginEnd="20dp"
                        android:cropToPadding="true"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/ll_contract_info_line5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_contract_info_line5"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:text="住址"
                        android:textColor="@color/c_a6a6a6"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/et_contract_info_line5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:layout_marginEnd="20dp"
                        android:cropToPadding="true"
                        android:gravity="end"
                        android:textColor="@color/c_252525"
                        android:textSize="@dimen/city_tiny_large_size" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                 <LinearLayout
                     android:id="@+id/ll_contract_info_line6"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingTop="12dp"
                     android:paddingBottom="12dp"
                     android:gravity="center_vertical"
                     android:orientation="horizontal">

                     <TextView
                         android:id="@+id/tv_contract_info_line6"
                         android:layout_width="120dp"
                         android:layout_height="wrap_content"
                         android:layout_marginStart="20dp"
                         android:gravity="center_vertical"
                         android:text="有效期"
                         android:textColor="@color/c_a6a6a6"
                         android:textSize="14sp" />


                     <TextView
                         android:id="@+id/et_contract_info_line6"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:adjustViewBounds="true"
                         android:gravity="end"
                         android:background="@null"
                         android:cropToPadding="true"
                         android:layout_marginEnd="20dp"
                         android:textColor="@color/c_252525"
                         android:textSize="14sp" />

                 </LinearLayout>

                     <ImageView
                        android:id="@+id/iv_line_place"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                         android:layout_marginStart="20dp"
                         android:layout_marginEnd="20dp"
                        android:background="@color/c_dfdfdf"
                        android:contentDescription="@null" />
                  <LinearLayout
                       android:id="@+id/ll_contract_info_place"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                      android:paddingTop="12dp"
                      android:paddingBottom="12dp"
                       android:gravity="center_vertical"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/tv_contract_info_place_title"
                           android:layout_width="120dp"
                           android:layout_height="wrap_content"
                           android:gravity="center_vertical"
                           android:layout_marginStart="20dp"
                           android:text="场地性质"
                           android:textColor="@color/c_a6a6a6"
                           android:textSize="14sp" />

                       <TextView
                           android:id="@+id/tv_contract_service_place_type"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="15dp"
                           android:layout_marginRight="15dp"
                           android:layout_weight="1"
                           android:adjustViewBounds="true"
                           android:background="@null"
                           android:gravity="end"
                           android:cropToPadding="true"
                           android:textColor="@color/c_252525"
                           android:textSize="14sp" />

                   </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_service_age"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:text="合同服务年限"
                    android:textColor="@color/c_a6a6a6"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_contract_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:text="6"
                    android:textColor="@color/c_252525"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_sensor_info_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_service_info_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_service_status"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:text="合同状态"
                        android:textColor="@color/c_b6b6b6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_contract_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cropToPadding="true"
                        android:paddingBottom="4dp"
                        android:layout_centerVertical="true"
                        android:paddingTop="4dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="10sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_line8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <RelativeLayout
                    android:id="@+id/rl_service_info_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_service_crate_time"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:text="合同生成时间"
                        android:textColor="@color/c_b6b6b6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_contract_crete_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cropToPadding="true"
                        android:padding="10dp"
                        android:text="2018.6.24"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_line7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/c_dfdfdf"
                    android:contentDescription="@null" />

                <RelativeLayout
                    android:id="@+id/rl_service_info_sign_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_service_sign"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:text="合同签订时间"
                        android:textColor="@color/c_b6b6b6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_contract_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:cropToPadding="true"
                        android:padding="10dp"
                        android:textColor="@color/c_252525"
                        android:textSize="14sp" />

                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/bt_confirm"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/shape_button"
                android:gravity="center"
                android:text="合同二维码"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
