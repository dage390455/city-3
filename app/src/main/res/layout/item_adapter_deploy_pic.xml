<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/tv_deploy_pic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/deploy_pic_device_pic"
            android:textColor="@color/c_252525"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_deploy_pic_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_deploy_pic_title"
            android:layout_marginTop="4dp"
            android:text="@string/deploy_pic_device_pic_tip"
            android:textColor="@color/c_a6a6a6"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/ll_add_deploy_pic"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_bg_solid_ff_stroke_df_corner_2dp"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/pic_add" />

                <TextView
                    android:id="@+id/tv_add_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="@string/deploy_pic_take_photo"
                    android:textColor="@color/c_252525"
                    android:textSize="10sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_deploy_pic"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imv_deploy_pic"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_corner_2"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imv_deploy_pic_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null"
                    android:src="@mipmap/picture_del"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

