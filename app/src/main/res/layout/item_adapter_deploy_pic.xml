<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">

    <TextView
        android:id="@+id/item_adapter_deploy_pic_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="设备图"
        android:textColor="@color/c_a6a6a6"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_adapter_deploy_pic_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="需要的"
        android:textColor="@color/c_a6a6a6"
        android:textSize="12sp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_adapter_deploy_pic_cl_imv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <android.support.constraint.Guideline
            android:id="@+id/guide_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/item_adapter_deploy_pic_imv_example"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="9dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:src="@drawable/example"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="3:2"
            app:layout_constraintEnd_toEndOf="@id/guide_line_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <RelativeLayout
            android:id="@+id/item_adapter_deploy_pic_rl_take_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/shape_bg_solid_ff_stroke_df_corner_2dp"
            android:clipChildren="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="3:2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guide_line_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/item_adapter_deploy_pic_imv_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_adapter_deploy_pic_tv_take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@mipmap/pic_add"
                android:drawablePadding="8dp"
                android:text="@string/deploy_pic_take_photo"
                android:textColor="@color/c_252525"
                android:textSize="10sp"
                android:visibility="visible" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/item_adapter_deploy_pic_imv_delete_pic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@null"
            android:src="@mipmap/picture_del"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="14dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>


</LinearLayout>