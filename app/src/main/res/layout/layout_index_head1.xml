<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/index_layout_head1"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y1000"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextSwitcher
            android:id="@+id/index_head_alarm_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/x180"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/index_head_alarm_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_alarm"
            android:textColor="@color/white"
            android:textSize="@dimen/x40"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/index_head_alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextSwitcher
                android:id="@+id/index_head_lost_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/x100"/>

            <TextView
                android:id="@+id/index_head_lost_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="失联"
                android:textColor="@color/white"
                android:textSize="@dimen/x40"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextSwitcher
                android:id="@+id/index_head_inactive_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/x100"/>

            <TextView
                android:id="@+id/index_head_inactive_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未激活"
                android:textColor="@color/white"
                android:textSize="@dimen/x40"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
