<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y1000"
    android:orientation="vertical"
    android:id="@+id/index_layout_head1"
    android:gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView
            android:text=""
            android:id="@+id/index_head_alarm_num"
            android:textSize="@dimen/x180"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/today_alarm"
            android:textSize="@dimen/x40"
            android:id="@+id/index_head_alarm_num_title"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/index_head_alarm_layout"
        android:layout_marginBottom="@dimen/y50"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text=""
                android:id="@+id/index_head_lost_num"
                android:textColor="@color/white"
                android:textSize="@dimen/x100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="失联"
                android:textSize="@dimen/x40"
                android:id="@+id/index_head_lost_num_title"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text=""
                android:textSize="@dimen/x100"
                android:id="@+id/index_head_inactive_num"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="未激活"
                android:textSize="@dimen/x40"
                android:id="@+id/index_head_inactive_num_title"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
