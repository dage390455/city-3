<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/cl_root_item_adapter_alarm_camera_video_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pic_item_adapter_alarm_camera_video_detail"
        android:layout_width="82dp"
        android:layout_height="62dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_marginStart="20dp"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_name_item_adapter_alarm_camera_video_detail"
        app:layout_constraintVertical_bias="0">
        <ImageView
            android:id="@+id/iv_pic_item_adapter_alarm_camera_video_detail"
            android:layout_width="82dp"
            android:layout_height="62dp"
            android:scaleType="centerCrop"
            android:background="@color/transparent"
            android:contentDescription="@null"
            />
        <ImageView
            android:id="@+id/iv_video_item_adapter_alarm_camera_video_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alarm_camera_live_btn"
            android:contentDescription="@null"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_watch_state_item_adapter_alarm_camera_video_detail"
            android:layout_width="82dp"
            android:layout_height="62dp"
            android:textColor="@color/white"
            android:visibility="visible"
            android:textSize="12dp"
            android:gravity="center"
            android:background="@color/c_08000000"
            android:text="@string/watching"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shooting_video"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:textSize="10dp"
            android:visibility="visible"
            android:layout_gravity="bottom|start"
            android:paddingBottom="2dp"
            android:background="@drawable/shape_bg_solid_f48f57_bottomleft_topright_corner_4"
            android:textColor="@color/white"
            />
    </android.support.v7.widget.CardView>



    <TextView
        android:id="@+id/tv_name_item_adapter_alarm_camera_video_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cv_pic_item_adapter_alarm_camera_video_detail"
        app:layout_constraintEnd_toStartOf="@id/iv_download_item_adapter_alarm_camera_video_detail"
        android:textSize="16dp"
        android:textColor="@color/c_252525"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        />

    <ImageView
        android:id="@+id/iv_download_item_adapter_alarm_camera_video_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alarm_video_download"
        app:layout_constraintStart_toEndOf="@id/tv_name_item_adapter_alarm_camera_video_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"/>

</android.support.constraint.ConstraintLayout>