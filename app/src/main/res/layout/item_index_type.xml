<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/y80"
    android:paddingTop="@dimen/y80">

    <LinearLayout
        android:id="@+id/item_index_type_icon_layout"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y100"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_index_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_sensor_co" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_index_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y15"
        android:text="二氧化碳"
        android:textColor="@color/c_626262"
        android:textSize="12sp" />
</LinearLayout>