<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_deploy_rl_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/item_deploy_pic_imv_thumbnail"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/shape_bg_corner_29c_shadow"
            android:contentDescription="@null"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/thumbnail_temp" />

        <ImageView
            android:id="@+id/item_deploy_pic_imv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            android:layout_toEndOf="@id/item_deploy_pic_imv_thumbnail"
            android:contentDescription="@null"
            android:layout_marginTop="-2dp"

            android:src="@drawable/deploy_pic_close" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_deploy_pic_ll_add_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_bg_corner_dfdf_shadow"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumbnail_add"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍摄"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:textSize="12sp"
            android:textColor="@color/c_252525"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</RelativeLayout>
