<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.sensoro.smartcity.activity.DeploySettingContactActivity">

    <RelativeLayout
        android:id="@+id/deploy_setting_contact_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/deploy_setting_contact_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="15dp"
            android:src="@mipmap/ic_back"/>

        <TextView
            android:id="@+id/deploy_setting_contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/deploy_contact_title"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_large_size"/>

        <TextView
            android:id="@+id/deploy_setting_contact_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x50"
            android:text="@string/finish"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_tiny_large_size"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y3"
        android:background="@color/c_e7e7e7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_f6f6f6"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:layout_marginTop="@dimen/y100"
            android:background="@color/c_e7e7e7"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/y50"
            android:paddingTop="@dimen/y50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="@string/name"
                android:textColor="@color/c_888888"
                android:textSize="@dimen/x45"/>

            <EditText
                android:id="@+id/deploy_setting_contact_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:background="@null"
                android:gravity="right"
                android:hint="@string/contact_name"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/c_e7e7e7"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x45"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/c_e7e7e7"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/y50"
            android:paddingTop="@dimen/y50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="@string/contacts"
                android:textColor="@color/c_888888"
                android:textSize="@dimen/x45"/>

            <EditText
                android:id="@+id/deploy_setting_content_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:background="@null"
                android:gravity="right"
                android:hint="@string/contact_phone"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/c_e7e7e7"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x45"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:layout_marginBottom="@dimen/y100"
            android:background="@color/c_e7e7e7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/deploy_setting_contact_history_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x45"
            android:layout_marginTop="@dimen/y45"
            android:text="@string/history"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_tiny_large_size"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deploy_setting_contact_history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/deploy_setting_contact_history_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y45"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/deploy_setting_content_history_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y45"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
