<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.sensoro.smartcity.activity.DeploySettingNameActivity">

    <RelativeLayout
        android:id="@+id/deploy_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/deploy_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="15dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/deploy_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_name_address"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_large_size" />

        <TextView
            android:id="@+id/deploy_setting_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x50"
            android:text="@string/finish"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_tiny_large_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/c_e7e7e7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/deploy_setting_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y160"
            android:layout_marginLeft="@dimen/x45"
            android:layout_marginRight="@dimen/x45"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/shape_et_deploy"
            android:gravity="center_vertical"
            android:hint="@string/tips_hint_name_address_set"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="@dimen/x30"
            android:singleLine="true"
            android:text=""
            android:textColorHint="@color/c_888888"
            android:textSize="@dimen/x45" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deploy_setting_history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deploy_setting_history_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x45"
            android:layout_marginTop="@dimen/y60"
            android:text="@string/history"
            android:textColor="@color/c_626262"
            android:textSize="@dimen/city_tiny_large_size" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/deploy_setting_history_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y45" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deploy_setting_relation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/deploy_setting_relation_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y45" />
    </LinearLayout>
</LinearLayout>
