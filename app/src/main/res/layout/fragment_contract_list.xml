<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/contract_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:background="@color/white">

            <ImageView
                android:id="@+id/contract_iv_menu_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:padding="18dp"
                android:src="@mipmap/ic_back" />

            <TextView
                android:id="@+id/contract_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/contract_list"
                android:textColor="@color/c_252525"
                android:textSize="@dimen/x60" />


            <ImageView
                android:id="@+id/contract_iv_add"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/y160"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:padding="8dp"
                android:src="@mipmap/ic_contract_index_add" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/c_e7e7e7" />

        <RadioGroup
            android:id="@+id/rg_contract_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_contract_all"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_contract_title_bg_select"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="@dimen/px20dp"
                android:text="全部合同"
                android:textColor="@drawable/selector_contract_title_text_select"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_contract_business"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_contract_title_bg_select"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/px20dp"
                android:text="企业合同"
                android:textColor="@drawable/selector_contract_title_text_select"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_contract_person"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_contract_title_bg_select"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/px20dp"
                android:text="个人合同"
                android:textColor="@drawable/selector_contract_title_text_select"
                android:textSize="16sp" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/list_sep_color">

            <ImageView
                android:id="@+id/no_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/no_content"
                android:visibility="gone" />

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/contract_ptr_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/y10"
                    android:divider="@color/list_sep_color"
                    android:dividerHeight="@dimen/y30"
                    android:fadingEdge="none"
                    android:scrollbars="vertical" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/y50"
        android:layout_marginRight="@dimen/x50">

        <ImageView
            android:id="@+id/contract_return_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/ic_return_top"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
