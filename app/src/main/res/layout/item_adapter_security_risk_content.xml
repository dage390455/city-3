<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/white"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    >

    <TextView
        android:id="@+id/tv_location_adapter_security_risks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_a6a6a6"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_location_oval_adapter_security_risks"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_location_adapter_security_risks"
        app:layout_constraintBottom_toBottomOf="@id/tv_location_adapter_security_risks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_location_adapter_security_risks"
        android:contentDescription="@null"
        android:src="@drawable/shape_oval_29c"
        />

    <TextView
        android:id="@+id/tv_location_name_adapter_security_risks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical|start"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:layout_marginEnd="20dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_location_adapter_security_risks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_location_adapter_security_risks"
        app:layout_constraintTop_toTopOf="@id/tv_location_adapter_security_risks" />

    <View
        android:id="@+id/view_divider_adapter_security_risks"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_divider_height"
        android:layout_marginTop="18dp"
        android:background="@color/c_dfdfdf"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_location_adapter_security_risks" />

    <TextView
        android:id="@+id/tv_behavior_adapter_security_risks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/c_a6a6a6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_location_adapter_security_risks"
        app:layout_constraintStart_toStartOf="@id/tv_location_adapter_security_risks"
        app:layout_constraintTop_toBottomOf="@id/view_divider_adapter_security_risks"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/iv_behavior_oval_adapter_security_risks"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_behavior_adapter_security_risks"
        app:layout_constraintBottom_toBottomOf="@id/tv_behavior_adapter_security_risks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_location_adapter_security_risks"
        android:contentDescription="@null"
        android:src="@drawable/shape_oval_29c"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_behaviors_adapter_security_risks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/tv_location_name_adapter_security_risks"
        app:layout_constraintTop_toTopOf="@id/tv_behavior_adapter_security_risks">

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>