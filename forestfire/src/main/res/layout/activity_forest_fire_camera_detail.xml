<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f4f4f4">

    <include
        android:id="@+id/in_forest_fire_camera_detail_header"
        layout="@layout/item_include_text_title" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/in_forest_fire_camera_detail_header"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/c_f4f4f4"/>

            <TextView android:id="@+id/tv_forest_fire_camera_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/c_252525"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                >

                <TextView android:id="@+id/tv_forest_fire_camera_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_252525"
                    android:textSize="14dp"/>

                <TextView android:id="@+id/tv_forest_fire_camera_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/c_252525"
                    android:textSize="14dp"/>

            </LinearLayout>




<!--            此处嵌入直播组件，由林鹏负责加入-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

<!--                直播1-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="217dp"
                    android:background="#000000"/>

<!--                直播2-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="217dp"
                    android:background="#ff8585"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/c_f4f4f4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/c_a6a6a6"
                android:textSize="12dp"
                android:text="@string/forest_fire_camera_detail_base_info"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/forest_fire_camera_detail_device_sn"
                    android:textColor="@color/c_252525"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_forest_fire_camera_detail_device_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/c_a6a6a6"
                    android:textSize="12dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_divider_height"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/c_dfdfdf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/forest_fire_camera_detail_device_gatway"
                    android:textColor="@color/c_252525"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_forest_fire_camera_detail_device_gatway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/c_a6a6a6"
                    android:textSize="12dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_divider_height"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/c_dfdfdf" />



            <LinearLayout
                android:id="@+id/ll_forest_fire_camera_detail_device_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/forest_fire_camera_detail_device_location"
                    android:textColor="@color/c_252525"
                    android:textSize="16dp"/>

                <TextView  android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="15dp"
                    android:ellipsize="end"
                    android:textColor="@color/c_252525"
                    android:maxLines="1"
                    android:lines="1"
                    android:textSize="16dp"
                    android:layout_weight="1"/>

                <TextView android:id="@+id/tv_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/forest_fire_camera_detail_device_location_modify"
                    android:textColor="#1DBB99"
                    android:textSize="16dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="3dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/arrows_right" />
            </LinearLayout>


<!--            地图部分-->
            <com.sensoro.forestfire.widgets.GestureMapView
                android:id="@+id/textureMapView"
                android:layout_width="match_parent"
                android:layout_height="217dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>