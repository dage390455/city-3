<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    >

    <TextView
        android:id="@+id/item_device_camera_tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/c_252525"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/item_device_camera_tv_onlinestate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_device_camera_tv_device_name"
        android:layout_marginTop="8dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/c_1dbb99"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/item_device_camera_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_device_camera_tv_onlinestate"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/item_device_camera_tv_onlinestate"
        android:textColor="@color/c_a6a6a6"
        android:textSize="12dp" />

</RelativeLayout>