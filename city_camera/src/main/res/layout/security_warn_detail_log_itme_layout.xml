<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_security_log"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/security_warn_detail_log_item_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="alksdjflasjdflajslfdjkalskd"
        android:textColor="@color/c_a6a6a6"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/security_warn_detail_log_item_remarks_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="6dp"
        android:text="asdfasdasfd"
        android:textColor="@color/c_252525"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/security_warn_detail_log_item_title_tv"
        app:layout_constraintTop_toBottomOf="@id/security_warn_detail_log_item_title_tv" />

    <TextView
        android:id="@+id/security_warn_detail_log_item_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="asdfasdfasd"
        android:textColor="@color/c_a6a6a6"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/security_warn_detail_log_item_title_tv"
        app:layout_constraintTop_toBottomOf="@id/security_warn_detail_log_item_remarks_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>